<!DOCTYPE html>

@* TODO: lang depends on country *@
<html lang="en">
<head>
    <environment names="Staging,Production">
        <link asp-href-include="~/css/*.min.css" rel="stylesheet"/>
        <script asp-src-include="~/js/*.min.js" type="text/javascript"></script>
        <link asp-href-include="~/lib/css/*.min.css" rel="stylesheet"/>
        <script asp-src-include="~/lib/js/*.min.js" type="text/javascript"></script>
    </environment>
    <environment names="Development">
        <link asp-href-include="~/css/*.css" asp-href-exclude="~/css/*.min.css" rel="stylesheet"/>
        <script asp-src-include="~/js/*.js" asp-src-exclude="~/css/*.min.js" type="text/javascript"></script>
        <link asp-href-include="~/lib/css/*.css" asp-href-exclude="~/lib/css/*.min.css" rel="stylesheet"/>
        <script asp-src-include="~/lib/js/*.js" asp-src-exclude="~/lib/js/*.min.js" type="text/javascript"></script>
    </environment>
    <title>
        TODO
    </title>
</head>
<body>
    @RenderBody()
</body>
</html>