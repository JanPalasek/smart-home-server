@model SmartHome.Web.Models.Role.CreateRoleViewModel
@{
    ViewBag.Header = "Role";
}

<div asp-validation-summary="All"></div>

<section class="section control-section small-layout">
    <form method="post" asp-action="Create">
        <div class="form-group">
            <ejs-textbox id="role-name" ejs-for="Model.Name" placeholder="Name" floatLabelType="Auto"></ejs-textbox>
        </div>
        <ejs-button id="button" type="submit" content="Create" cssClass="e-primary"></ejs-button>
    </form>
</section>