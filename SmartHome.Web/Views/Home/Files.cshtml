@model SmartHome.Web.Configurations.FileManagerConfiguration

<ejs-filemanager id="file-manager">
    <e-filemanager-ajaxsettings url="/api/syncfusion/files/operations"
                                downloadUrl="/api/syncfusion/files/download"
                                uploadUrl="/api/syncfusion/files/upload"
                                getImageUrl="/api/syncfusion/files/getImage">
    </e-filemanager-ajaxsettings>
    <e-filemanager-uploadsettings maxFileSize="@Model.MaximumUploadSize"></e-filemanager-uploadsettings>
</ejs-filemanager>

<style>
    main {
        width: 95%;
    }
    
    #file-manager {
        background-color: white;
    }
</style>