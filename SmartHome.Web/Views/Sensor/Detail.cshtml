@model SmartHome.Web.Models.Sensor.SensorViewModel

@{
    ViewBag.Header = "Sensor";
}

@{
    bool disableFields = !Model.CanEdit;
}


<div asp-validation-summary="All"></div>

<section class="control-section form-section">
    @if (!disableFields && !Model.IsCreatePage)
    {
        <div class="form-group">
            <a href="@Url.Action("Delete", new {id = Model.Model.Id})">
                <ejs-button id="delete-button" content="Delete"></ejs-button>
            </a>
        </div>
    }
    <form method="post" class="section">
        <input type="hidden" asp-for="Model.Id"/>
        <div class="form-group">
            <ejs-textbox id="name" ejs-for="Model.Name" placeholder="Name" floatLabelType="Auto" readonly="@disableFields"></ejs-textbox>
        </div>
        <div class="form-group">
            <ejs-numerictextbox ejs-for="Model.MinimumRequiredVoltage" id="min-req-voltage" placeholder="Minimum required voltage" floatLabelType="Auto" readonly="@disableFields"></ejs-numerictextbox>
        </div>
        <div class="form-group">
            <ejs-dropdownlist id="place" ejs-for="Model.PlaceId" dataSource="@Model.Places" placeholder="Place" floatLabelType="Auto" readonly="@disableFields">
                <e-dropdownlist-fields text="Name" value="Id"></e-dropdownlist-fields>
            </ejs-dropdownlist>
        </div>
        <div class="form-group">
            <ejs-dropdownlist id="sensor-type" ejs-for="Model.SensorTypeId" dataSource="@Model.SensorTypes" placeholder="Sensor type" floatLabelType="Auto" readonly="@disableFields">
                <e-dropdownlist-fields text="Name" value="Id"></e-dropdownlist-fields>
            </ejs-dropdownlist>
        </div>
        <div class="form-group">
            <ejs-dropdownlist id="battery-power-source-type" ejs-for="Model.BatteryPowerSourceTypeId" dataSource="@Model.BatteryPowerSourceTypes"
                              placeholder="Battery power source type" floatLabelType="Auto" readonly="@disableFields">
                <e-dropdownlist-fields text="Name" value="Id"></e-dropdownlist-fields>
            </ejs-dropdownlist>
        </div>
        @if (!disableFields)
        {
            <ejs-button id="button" type="submit" content="Submit" cssClass="e-primary"></ejs-button>
        }
    </form>
</section>
