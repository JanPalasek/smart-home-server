@model SmartHome.Web.Models.Admin.ChangePasswordViewModel

@* TODO  *@

<div asp-validation-summary="All" class="section"></div>

<form method="post">
    <div class="form-row">
        <div class="col">
            <label asp-for="Model.OldPassword"></label>
            <input asp-for="Model.OldPassword" type="password"/>
        </div>
    </div>

    <div class="form-row">
        <div class="col">
            <label asp-for="Model.NewPassword"></label>
            <input asp-for="Model.NewPassword" type="password"/>
        </div>
    </div>
    
    <div class="form-row">
        <div class="col">
            <label>New Password again</label>
            <input type="password"/>
        </div>
    </div>

    <div class="form-row">
        <button class="btn btn-primary mb-2 mr-sm-2" type="submit">Submit</button>
    </div>
    
    <input asp-for="Model.Id" type="hidden" />

    @* TODO: Validate two passwords are same before submitting *@
</form>